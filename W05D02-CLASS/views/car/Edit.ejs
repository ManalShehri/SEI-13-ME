    <h1>Edit <%=car.name%></h1>
    <div class="form">
      <form action="/car/update/<%=car._id%>?_method=put" method="POST">
          <div class="form-group">
              <label for="name">Car Name</label>
              <input type="text" class="form-control" name="name" value="<%=car.name%>">
          </div>
          <div class="form-group">
              <label for="image">Car Image</label>
              <input type="text" class="form-control" name="image" value="<%=car.image%>">
          </div>
          <div class="form-group">
              <label for="model">Car Model</label>
              <input type="text" class="form-control" name="model" value="<%=car.model%>">
          </div>
          <div class="form-group">
              <label for="year">Car Year</label>
              <input type="text" class="form-control" name="year" value="<%=car.year%>">
          </div>
          <input type="submit" value="Edit car" class="btn btn-primary"/>
      </form>
  </div>
  