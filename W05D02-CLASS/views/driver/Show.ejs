<div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"> <%=driver.name%> </h5>
      <p class="card-text">
        <ul>
            <li>Name: <%= driver.city %> </li>
            <li>Age: <%= driver.age %> </li>
            <li>Address: <%= driver.address %> </li>
        </ul>
      </p>
      <form action="/driver/<%= driver._id %>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" class="btn btn-danger" />
    </form>
  </div>
