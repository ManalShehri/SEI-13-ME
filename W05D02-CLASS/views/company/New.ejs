<h1>New Company</h1>
<div class="form">
    <form action="/companies/" method="POST">
        <div class="form-group">
            <label for="name">Company Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label for="name">Company Logo</label>
            <input type="text" class="form-control" name="logo">
        </div>
        <div class="form-group">
            <label for="name">Company City</label>
            <input type="text" class="form-control" name="city">
        </div>
        <div class="form-group">
            <label for="name">Company Address</label>
            <input type="text" class="form-control" name="address">
        </div>
        <div class="form-group">
            <label for="name">Company Telephone</label>
            <input type="text" class="form-control" name="telephone">
        </div>
        <!-- cars -->
        <% cars.forEach(car => { %>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" name="cars" value="<%=car.id%>">
                <label class="custom-control-label" for="customCheck1" name="cars"><%=car.name%> </label>
            </div>
          <% }) %>
        
        <input type="submit" value="Create company" class="btn btn-primary"/>
    </form>
</div>
