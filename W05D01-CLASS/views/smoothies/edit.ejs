<h1>edit Smoothie Page</h1>
<form action="/smoothies/<%=smoothie._id %>?_method=put" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" value="<%= smoothie.name %>"/>
  <br>
  <% fruits.forEach(fruit => { %>
    <input type="checkbox" name="smoothieFruitsArray"  <%=smoothie.fruits.includes(fruit._id) ?  "checked" : "" %> value="<%= fruit._id %>"><%= fruit.name %><br>
  <% }) %>  
  <input type="submit" value="update Smoothie">
</form>