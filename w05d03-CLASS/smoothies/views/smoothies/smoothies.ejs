<head>
    <title> Smoothie</title>
  </head>
      <h1>We have <%=( "Smoothie")+"s"%> here</h1>
  
      <ul>
        <% smoothies.forEach((ele,i) => { %>
        <li>
          <a href="/smoothies/<%=ele._id%> "> go to the Smoothie  <%=ele.name %> </a> 
          <br>
          <a href="/smoothies/<%= ele._id %>/edit">EDIT</a>
          <form action="/smoothies/<%=ele._id %>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />
          </form>
        </li>
        <% }) %>
      </ul>
  
      <a href="/smoothies/new"> add new Smoothie </a>
  